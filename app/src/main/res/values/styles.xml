<resources>

    <style name="MaterialButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/materialButtonBackgroundTint</item>
        <item name="android:textColor">?attr/materialButtonTextColor</item>
        <item name="android:layout_marginStart">@dimen/padding16dp</item>
        <item name="android:layout_marginEnd">@dimen/padding16dp</item>
    </style>


    <style name="MaterialButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">?attr/materialButtonStrokeColor</item>
        <item name="android:textColor">?attr/materialButtonOutlineTextColor</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="iconTint">?attr/colorIconTint</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


    <style name="MyShapeAppearanceOutlineButtonLeft">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="MyShapeAppearanceOutlineButtonRight">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>


    <style name="MyShapeAppearanceOutlineButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialButtonToggleGroupTextAppearance">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MaterialButtonTextAppearance">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="TextViewScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:paddingEnd">@dimen/padding20dp</item>
        <item name="android:paddingStart">@dimen/padding20dp</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:button">@drawable/selector_radiogroup</item>
        <item name="android:buttonTint">@drawable/selector_radiogroup_button_tint</item>
        <item name="android:textColor">@drawable/selector_radiogroup_text_color</item>
        <item name="android:paddingStart">@dimen/padding20dp</item>
        <item name="android:layout_marginStart">@dimen/padding10dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextViewStrahovkaScreen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:layout_marginStart">@dimen/padding20dp</item>
        <item name="android:layout_marginEnd">@dimen/padding20dp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingStart">@dimen/padding20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
    </style>


</resources>

