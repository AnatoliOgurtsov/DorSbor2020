<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding10dp">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_less20"
            style="@style/MaterialButtonOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_button_less20"
            android:textAppearance="@style/MaterialButtonTextAppearance"
            app:icon="@drawable/ic_hexagon_slice_1"
            app:shapeAppearance="@style/MyShapeAppearanceOutlineButton">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_in_21_40"
            style="@style/MaterialButtonOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_button_in_21_40"
            android:textAppearance="@style/MaterialButtonTextAppearance"
            app:icon="@drawable/ic_hexagon_slice_3"
            app:shapeAppearance="@style/MyShapeAppearanceOutlineButton">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_more_40"
            style="@style/MaterialButtonOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_button_more_40"
            android:textAppearance="@style/MaterialButtonTextAppearance"
            app:icon="@drawable/ic_hexagon_slice_6"
            app:shapeAppearance="@style/MyShapeAppearanceOutlineButton">
    </com.google.android.material.button.MaterialButton>


</LinearLayout>
